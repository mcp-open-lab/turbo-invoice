{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "entry": [
    "app/**/*.{js,ts,tsx}",
    "components/**/*.{js,ts,tsx}",
    "lib/**/*.{js,ts,tsx}",
    "scripts/**/*.{js,ts}"
  ],
  "project": [
    "app/**/*.{js,ts,tsx}",
    "components/**/*.{js,ts,tsx}",
    "lib/**/*.{js,ts,tsx}",
    "scripts/**/*.{js,ts}",
    "hooks/**/*.{js,ts,tsx}",
    "e2e/**/*.{js,ts,tsx}",
    "tests/**/*.{js,ts,tsx}"
  ],
  "ignore": [
    "**/*.d.ts",
    "**/node_modules/**",
    ".next/**",
    "drizzle/**",
    "**/*.example.ts",
    "**/*.example.tsx"
  ],
  "ignoreDependencies": [
    "eslint-config-next",
    "eslint",
    "postcss-load-config",
    "lint-staged"
  ],
  "ignoreBinaries": ["vercel"],
  "ignoreExportsUsedInFile": true
}
