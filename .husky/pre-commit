#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run tests (unit/integration only, not E2E)
npm test -- --run || exit 1

# Run linting (continue on error for now)
npm run lint || true

# Build check - ensure code compiles before committing
echo "Building project..."
npm run build || exit 1
